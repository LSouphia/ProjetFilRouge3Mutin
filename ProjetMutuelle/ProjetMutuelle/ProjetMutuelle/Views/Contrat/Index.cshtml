@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<h3>Chercher un contrat</h3>
<fieldset>
    <legend></legend>
    <div class="container">
        <form class="form-inline">
            <div class="form-group">
                <div class="col-md-12">
                    <label class="">Recherche par Souscripteur </label>
                    <input type="text" class="form-control" placeholder="" id="chrecherID" />
                    <a href="~/Views/Entreprise/Index/Liste.cshtml"><input type="submit" value="Chercher" class="btn float-right btn-success" /></a>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label>Statut du Contrat</label>
                    <input type="text" class="form-control" list="autocomplete" id="Statut" />
                    <datalist id="autocomplete">
                        <option value="Ac" />
                        <option value="Si" />
                        <option value="Pa">
                   </datalist>
                    <a href="~/Views/Entreprise/Index/Liste.cshtml"><input type="submit" value="Chercher" class="btn float-right btn-success" /></a>
                </div>
            </div>
        </form>
    </div>
</fieldset>
