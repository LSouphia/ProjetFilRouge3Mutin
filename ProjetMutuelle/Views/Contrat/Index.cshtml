@model IEnumerable<BiblioMetierBOL.Contrat>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Chercher un contrat</h3>
<select id="SearchBy">
    <option value="Name">Recherche par Souscripteur</option>
    <option value="ID">Statut du Contrat</option>
</select><br /><br />
@Html.TextBox("Search")<input type="submit" id="SearchBtn" value="Recherche" /><br /><br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id de contrat</th>
            <th>Souscripteur</th>
            <th>Filiale</th>
            <th>Type de contrat</th>
            <th>Effectif</th>
            <th>Date signature contrat</th>
            <th>Date Effet Contrat</th>
            <th>Date Fin Contrat</th>
        </tr>
    </thead>
    <tbody id="DataSearching">
        @foreach (var item in Model)
        {
        <tr>

            <td>@item.IDContrat</td>
            <td>@item.IDEntreprise</td>
            <td>@item.IDFiliale</td>
            <td>@item.TypeContrat</td>
            <td>@item.EffectifCatSocio</td>
            <td>@item.DateSignContrat</td>
            <td>@item.DateEffetContrat</td>
            <td>@item.DateFinContrat</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDContrat }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDContrat }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDContrat })
            </td>
        </tr>
        }

    </tbody>
</table>
